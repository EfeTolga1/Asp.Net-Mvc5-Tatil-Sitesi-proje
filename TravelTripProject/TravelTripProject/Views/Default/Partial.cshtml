@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div style="width:29%;float:left;" class="left">
            @*<div class="left">*@
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style="width:270px;height:160px;" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0,40)</p>
                <p><a href="/Blog/Blogdetay/@x.ID"><span class="read">Devamını oku >></span></a></p>
            </div>
        </div>
    }
    @*@Html.Action("Partial2", "Default") partial 2 içindei partialı çağırmak için yazmıştık,artk kullanmıyoruz *@

    <div class="clear"></div>
</div>
